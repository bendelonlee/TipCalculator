<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    tools:context=".MainActivity"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="409dp"
    android:layout_height="354dp"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    android:gravity="center"
    android:background="@color/colorPrimary"
    >

    <TextView
        android:textColor="@color/colorTextPrimary"
        android:background="@color/colorTextViewBackground"
        android:layout_margin="@dimen/margin"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="@dimen/txtTitle"
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TIP CALCULATOR" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:textColor="@color/colorTextSecondary"
        android:textColorHint="@color/colorTextSecondary"
        android:maxLength="7"

        android:textSize="@dimen/edtMeal"
        android:layout_margin="@dimen/margin"

        android:gravity="center"
        android:id="@+id/edtMeal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="Meal cost"
        android:textStyle="italic"

        />

    <TextView
        android:layout_margin="@dimen/margin"
        android:textStyle="italic"
        android:textColor="@color/colorTextSecondary"
        android:gravity="center"

        android:id="@+id/txtSelect"
        android:textSize="@dimen/txtSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Tip percentage" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@color/colorTextSecondary"
        android:textStyle="italic"

        android:layout_margin="@dimen/margin"

        android:gravity="center"
        android:textSize="@dimen/txtPercentage"
        android:id="@+id/txtPercentage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="15%" />

    <SeekBar
        android:layout_margin="@dimen/margin"
        android:progress="15"
        android:max="50"
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_margin="@dimen/margin"
        android:textSize="@dimen/btnReset"
        android:id="@+id/btnReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset" />

    <TextView

        android:layout_margin="@dimen/margin"

        android:gravity="center"
        android:textSize="@dimen/txtResult"
        android:id="@+id/txtResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TOTAL" />
</LinearLayout>

